<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings.app.devices.DeviceListFragment"
    android:fitsSystemWindows="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:text="Hello MagicMirror"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mainText" />

    <com.blublabs.magicmirror.common.InfoIcon
        xmlns:InfoIcon="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        InfoIcon:description="Bla bla bla"
        InfoIcon:defaultVal="Test"
        InfoIcon:possibleValues="@array/magicmirror_adapter_array"
        InfoIcon:notes="Just some notes"
        InfoIcon:title="Test"/>
</LinearLayout>